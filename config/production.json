{
  "server": {
    "host": "0.0.0.0",
    "port": 8080,
    "environment": "production",
    "enable_tls": true,
    "tls_cert_file": "/etc/ssl/certs/server.crt",
    "tls_key_file": "/etc/ssl/private/server.key",
    "enable_metrics": true,
    "cors_origins": ["https://samurai.example.com"]
  },
  "database": {
    "host": "db.example.com",
    "port": 5432,
    "user": "samurai_user",
    "password": "enc:encrypted_password_here",
    "dbname": "samurai_prod",
    "sslmode": "require",
    "max_open_conns": 50,
    "max_idle_conns": 25
  },
  "logger": {
    "level": "info",
    "format": "json",
    "enable_console": false,
    "enable_file": true,
    "enable_syslog": true
  },
  "auth": {
    "jwt_secret": "enc:encrypted_jwt_secret_here",
    "token_duration": "1h",
    "refresh_token_duration": "168h",
    "password_salt_cost": 14
  },
  "security": {
    "encryption_key": "enc:encrypted_encryption_key_here",
    "enable_rate_limiting": true,
    "rate_limit_requests": 1000,
    "enable_csrf_protection": true,
    "enable_security_headers": true,
    "enable_audit_logging": true
  },
  "secrets": {
    "provider": "vault",
    "vault": {
      "address": "https://vault.example.com:8200",
      "token": "enc:encrypted_vault_token_here",
      "path": "secret/samurai/prod",
      "enable_tls": true
    }
  },
  "external": {
    "llm_providers": {
      "openai": {
        "provider": "openai",
        "api_key": "enc:encrypted_openai_key_here",
        "enabled": true,
        "rate_limit": 100
      },
      "anthropic": {
        "provider": "anthropic",
        "api_key": "enc:encrypted_anthropic_key_here",
        "enabled": true,
        "rate_limit": 50
      }
    },
    "cache_provider": {
      "provider": "redis",
      "address": "redis.example.com:6379",
      "password": "enc:encrypted_redis_password_here",
      "enabled": true
    }
  }
}