      "enabled": false
    },
    "storage_provider": {
      "provider": "local",
      "bucket": "mcp-storage",
      "region": "",
      "access_key": "",
      "secret_key": "",
      "endpoint": "",
      "enable_ssl": true,
      "enabled": true
    },
    "cache_provider": {
      "provider": "memory",
      "address": "localhost:6379",
      "password": "",
      "database": 0,
      "max_retries": 3,
      "pool_size": 10,
      "idle_timeout": "5m",
      "enabled": false
    },
    "queue_provider": {
