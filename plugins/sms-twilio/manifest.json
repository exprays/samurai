{
  "name": "sms-twilio",
  "version": "1.0.0",
  "description": "SMS sending plugin using Twilio API for communication and messaging capabilities",
  "author": "Samurai Development Team",
  "type": "mcp",
  "tags": ["sms", "communication", "twilio", "messaging", "mcp"],
  "binary": "./sms-twilio.so",
  "entry_point": "NewSMSPlugin",
  "dependencies": [],
  "capabilities": [
    {
      "name": "send_sms",
      "description": "Send SMS messages via Twilio API",
      "type": "tool",
      "schema": {
        "type": "object",
        "properties": {
          "to": {
            "type": "string",
            "description": "Recipient phone number in E.164 format",
            "pattern": "^\\+[1-9]\\d{1,14}$"
          },
          "message": {
            "type": "string",
            "description": "Message content to send",
            "minLength": 1,
            "maxLength": 1600
          },
          "media_url": {
            "type": "string",
            "description": "Optional media URL for MMS",
            "format": "uri"
          }
        },
        "required": ["to", "message"]
      }
    },
    {
      "name": "get_delivery_status", 
      "description": "Get delivery status of sent messages",
      "type": "tool",
      "schema": {
        "type": "object",
        "properties": {
          "message_sid": {
            "type": "string",
            "description": "Twilio message SID"
          }
        },
        "required": ["message_sid"]
      }
    }
  ],
  "config_schema": {
    "type": "object",
    "properties": {
      "account_sid": {
        "type": "string",
        "description": "Twilio Account SID",
        "minLength": 34,
        "maxLength": 34
      },
      "auth_token": {
        "type": "string",
        "description": "Twilio Auth Token",
        "minLength": 32
      },
      "from_number": {
        "type": "string",
        "description": "Twilio phone number in E.164 format",
        "pattern": "^\\+[1-9]\\d{1,14}$"
      },
      "max_retries": {
        "type": "integer",
        "description": "Maximum retry attempts for failed sends",
        "minimum": 0,
        "maximum": 5,
        "default": 3
      },
      "retry_delay_seconds": {
        "type": "integer",
        "description": "Delay between retries in seconds",
        "minimum": 1,
        "maximum": 300,
        "default": 30
      },
      "rate_limit_per_minute": {
        "type": "integer",
        "description": "Maximum messages per minute",
        "minimum": 1,
        "maximum": 1000,
        "default": 60
      },
      "enable_logging": {
        "type": "boolean",
        "description": "Enable detailed logging",
        "default": true
      }
    },
    "required": ["account_sid", "auth_token", "from_number"]
  },
  "resources": {
    "max_memory_mb": 128,
    "max_cpu_percent": 10,
    "max_execution_time": "30s",
    "max_concurrency": 50
  },
  "permissions": ["network", "secrets"]
}